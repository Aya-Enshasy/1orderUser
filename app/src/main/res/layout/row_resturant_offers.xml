<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_slider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="@dimen/_14sdp"
    app:cardCornerRadius="@dimen/_16sdp"
    android:layout_margin="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_cateogry_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:scaleType="centerCrop"
            app:riv_corner_radius_top_left="@dimen/_20sdp"
            app:riv_corner_radius_top_right="@dimen/_20sdp"
            android:src="@drawable/default_slider_image"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignStart="@id/iv_cateogry_image"
            android:layout_alignTop="@id/iv_cateogry_image"
            android:layout_alignEnd="@id/iv_cateogry_image"
            android:layout_alignBottom="@id/iv_cateogry_image"
            android:background="@drawable/bg_overlay_item" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingEnd="@dimen/_10sdp"
            android:text="12$"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="salad chicken"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>