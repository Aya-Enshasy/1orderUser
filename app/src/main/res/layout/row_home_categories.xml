<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_slider"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_6sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_cateogry_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="fitXY"
            app:riv_corner_radius_top_left="@dimen/_10sdp"
            app:riv_corner_radius_top_right="@dimen/_10sdp"
            android:src="@drawable/default_slider_image"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignStart="@id/iv_cateogry_image"
            android:layout_alignTop="@id/iv_cateogry_image"
            android:layout_alignEnd="@id/iv_cateogry_image"
            android:layout_alignBottom="@id/iv_cateogry_image"
            android:background="@drawable/bg_overlay_item" />

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Resturants"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>